<%= render "filter" %>

<table class="table table-hover">
<tr>
  <th>Order #</th>
  <th>User</th>
  <th>Status</th>
  <th>Created At</th>
  <th>Updated At</th>
</tr>
<% @orders.each do |order| %>
  <tr class="orders" data-status="<%= order.status %>">
      <td><%= order.id %></td>
      <td><%= order.user.username %></td>
      <td class="order_status"><%= order.status %></td>
      <td><%= order.created_at.strftime('%A, %d %b %Z') %></td>
      <td><%= order.updated_at.strftime('%A, %d %b %Z') %></td>
    </tr>
<% end %>
</table>
