<table class="table table-hover">
<tr>
  <th>Order #</th>
  <th>User</th>
  <th>Status</th>
  <th>Created At</th>
  <th>Updated At</th>
</tr>
<% Order.all.each do |order| %>
  <td><%= order.id %></td>
  <td><%= order.user.username %></td>
  <td><%= order.status %></td>
  <td><%= order.created_at.strftime('%A, %d %b') %></td>
  <td><%= order.updated_at.strftime('%A, %d %b') %></td>
<% end %>
</table>
