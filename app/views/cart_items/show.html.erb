  <td> <%=  %> </td>
  <td> <%=  %> </td>
  <td> <%= @cart.total_price %> </td>
</tr>
</table>

<% if @cart.cats_and_quantity != [] %>
  <%= button_to "checkout", order_cats_path %>
<% end %>
