<table>
  <tr>
    <th>Name &nbsp; &nbsp; &nbsp;</th>
    <th>Description</th>
    <th>Price</th>
  </tr>

   <% @cats.each do |cat| %>
  <tr>
    <td><%= cat.name %></td>
    <td><%= cat.description %></td>
    <td><%= cat.price %></td>
  </tr>
  <% end %>

</table>

<%= button_to "checkout", order_cats_path %>
<%= link_to "continue", cat_path(@cats.last)  %>
