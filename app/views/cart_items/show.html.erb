<table>
<tr>
  <th>Name &nbsp; &nbsp; &nbsp;</th>
  <th>Description</th>
  <th>Price</th>
  <th>Quantity</th>
  <th>Total Price</th>
</tr>

<% @cart.cats_and_quantity.each do |cat| %>
  <tr>
    <td><%= cat[0].name %></td>
    <td><%= cat[0].description %></td>
    <td><%= cat[0].price %></td>
    <td><%= cat[1]%></td>
    <td><%= cat[1] * cat[0].price %></td>
    <td><%= button_to "plus-#{cat[0].id}", increment_cart_items_path(id: cat[0].id), method: :patch %>
  </tr>
<% end %>
<tr>
  <td> <%=  %> </td>
