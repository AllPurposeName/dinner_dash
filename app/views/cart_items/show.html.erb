<% @cart.cats_and_quantity.each do |cat| %>
  <tr>
    <td><%= cat[0].name %></td>
    <td><%= cat[0].description %></td>
    <td><%= @monifier.monify(cat[0].price) %></td>
    <td><%= cat[1]%></td>
    <td><%= @monifier.monify(cat[1] * cat[0].price) %></td>
  </tr>
<% end %>
