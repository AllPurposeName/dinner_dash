<h1>Your Orders</h1>
<% @orders.each_with_index do |order, index|  %>
  <h2> <%= link_to "Order ##{index+1}", order_path(order.id) %> </h2>
  <table class="table table-hover">
    <tr>
      <th>Name &nbsp; &nbsp; &nbsp;</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>

    <% order.cats.each do |cat| %>
      <tr>
        <td><%= cat.name %></td>
        <td><%= cat.description %></td>
        <td><%= cat.price %></td>
        <td><%= cat.quantity(order.id) %></td>
        <td><% cat.price = (cat.quantity(order.id) * cat.price) %></td>
            <%= cat.monify%>
      </tr>
    <% end %>
    <tr>
      <td> TOTAL PRICE </td>
      <td></td>
      <td></td>
      <td></td>
      <td> <%= order.total_monify %> </td>
    </tr>
  </table>


<% end %>
